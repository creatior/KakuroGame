                android:textSize="24sp"
                android:gravity="center"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:clickable="true"
